<UserControl
    x:Class="HCL_ODA_TestPAD.Views.TabbedCadModelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HCL_ODA_TestPAD.Views"
    xmlns:vm="clr-namespace:HCL_ODA_TestPAD.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="OnTabControlLoaded"
    mc:Ignorable="d">
    <Grid>
        <TabControl
            ItemTemplate="{StaticResource TabControlItemTemplate}"
            ItemsSource="{Binding CadImageTabViewModels}"
            SelectedItem="{Binding SelectedCadImageTabViewModel, Mode=TwoWay}" >
            <!--<TabControl.Resources>
                <DataTemplate DataType="{x:Type vm:HclCadImageViewModel}">
                    <ContentControl Content="{Binding Title}"/>
                </DataTemplate>
            </TabControl.Resources>-->
        </TabControl>

        <ContentControl d:IsHidden="True" Content="{Binding OverlayViewModel}" />

    </Grid>
</UserControl>
